datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  signups   Signup[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Tournament {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  matches   Match[]
  signups   Signup[]
  updatedAt DateTime @updatedAt
}

model Match {
  createdAt    DateTime    @default(now())
  id           String      @id @default(cuid())
  tournament   Tournament? @relation(fields: [tournamentId], references: [id])
  tournamentId String?
  updatedAt    DateTime    @updatedAt
}

model Signup {
  checkedin    Boolean?
  createdAt    DateTime    @default(now())
  id           String      @id @default(cuid())
  tournament   Tournament? @relation(fields: [tournamentId], references: [id])
  tournamentId String?
  updatedAt    DateTime    @updatedAt
  user         User?       @relation(fields: [userId], references: [id])
  userId       String?
}

model Webpage {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}